# EditorConfig enforces consistent coding styles
# UTF-8 without BOM policy for repo
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
# Allow Windows line endings if desired in markdown (optional comment)
end_of_line = lf
trim_trailing_whitespace = false

[*.ps1]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2
