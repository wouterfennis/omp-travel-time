# EditorConfig enforces consistent coding styles
root = true

[*]
# UTF-8 without BOM policy for repo
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
end_of_line = lf
trim_trailing_whitespace = true

[*.ps1]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2
